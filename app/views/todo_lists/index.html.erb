<div class="container">
</br></br>
  
</br>
  <% if @todo_lists.length < 1 %>
      <h1> <center>The List is empty</center></h1>
  <% end %>
  <% @todo_lists.each do |todo_list| %>
    <% if todo_list.user == current_user %>  
      <div class="list_item">       
        <% if todo_list.completed?%>
            <div class="row">
              <div class="col-sm-8">
                <strike class="complete"><p class="list_title"> <%= todo_list.title[0,15].capitalize + "..."%></p></strike></div>
              <div class="col-sm-4">
              
                <%= link_to incomplete_todo_list_path(todo_list.id),method: :patch do%>
                  <i class="fa fa-square item-icons uncheck" ></i>
                <% end %>       
                <%= link_to todo_list, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="fa fa-trash item-icons trash"></i>
              </div>
            </div>
                <% end %>  
        <% else %>
            <div class="row">
              <div class="col-sm-8">
             
                <% if todo_list.title.length > 15 %>
                  <p class="list_title"><%= link_to todo_list.title[0,15].capitalize + "...", todo_list %></p>
                <% else %>
                   <p class="list_title"><%= link_to todo_list.title.capitalize, todo_list %></p>
                <% end %>
              </div>
              <div class="col-sm-4">
               <%= link_to edit_todo_list_path(todo_list) do%>
                  <i class="fa fa-pencil item-icons pencil" ></i>
                <% end %> 
                <%= link_to complete_todo_list_path(todo_list.id),method: :patch do%>
                  <i class="fa fa-square-o item-icons check" ></i>
                <% end %>
                <%= link_to todo_list, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="fa fa-trash item-icons trash"></i>
              </div>
            </div>                
            <% end %>
        <% end %>
      </div>
     
    <% end %>
  <% end %>
  <div class= "title">
    <%=link_to  new_todo_list_path, method: :get  do %> 
      <i class="fa fa-plus-circle add_item"></i>
    <% end %>
  </div>

